<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>bin</id>
  <baseDirectory>k</baseDirectory>
    <dependencySets>
      <dependencySet>
        <outputDirectory>/bin</outputDirectory>
        <includes>
          <include>*:${native.exe.type}:*</include>
        </includes>
        <outputFileNameMapping>${artifact.artifactId}${native.extension}</outputFileNameMapping>
        <fileMode>775</fileMode>
      </dependencySet>
      <dependencySet>
        <outputDirectory>/lib/java</outputDirectory>
        <useProjectArtifact>true</useProjectArtifact>
        <includes>
          <include>*:jar:*</include>
        </includes>
      </dependencySet>
      <dependencySet>
        <outputDirectory>/lib/native</outputDirectory>
        <includes>
          <include>*:${native.library.type}:*</include>
        </includes>
        <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      </dependencySet>
      <dependencySet>
        <outputDirectory>/lib/maude</outputDirectory>
        <includes>
          <include>*:zip:*</include>
        </includes>
        <unpack>true</unpack>
      </dependencySet>
    </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>INSTALL*</include>
        <include>LICENSE*</include>
        <include>README*</include>
        <include>documentation/**</include>
        <include>lib/ktest.xsd</include>
        <include>lib/maude/**</include>
        <include>include/**</include>
        <include>samples/**</include>
        <include>tutorial/**</include>
        <include>editor-support/**</include>
      </includes>
      <excludes>
        <exclude>**/.*/**</exclude>
        <exclude>**/*-kompiled/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}/bin/${native.script.type}</directory>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
      <fileMode>775</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}/lib/${native.script.type}</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>checkJava</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
